<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="CAB SHARE"
            android:id="@+id/textView2"
            android:layout_marginTop="35dp"
            android:textColor="#ffa500"
            android:fontFamily="serif"
            android:textSize="25dp"
            android:layout_marginLeft="130dp" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="USERNAME"
            android:textSize="18dp"
            android:id="@+id/txt1"
            android:textColor="#ffffff"

            android:layout_marginLeft="15dp"
            android:layout_marginTop="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical|center" />



        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="PHONE NO."
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:id="@+id/txt2"
            android:textSize="18dp"
            android:layout_below="@+id/txt1"
            android:layout_alignRight="@+id/txt1"
            android:layout_alignEnd="@+id/txt1"
            android:gravity="center" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="FROM:"
            android:textColor="#ffffff"
            android:id="@+id/textView3"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_alignLeft="@+id/txt2"
            android:layout_alignStart="@+id/txt2"
            android:layout_below="@+id/txt2" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="TO:"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:id="@+id/textView6"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="DATE"
            android:textColor="#ffffff"
            android:id="@+id/textView4"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_below="@+id/textView6"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="TIME"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:id="@+id/textView7"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/txt2"
            android:layout_alignStart="@+id/txt2" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="CAB COMPANY"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:id="@+id/textView8"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_below="@+id/textView7"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:textSize="18dp"
            android:id="@+id/edit"
            android:layout_marginTop="30dp"
            android:background="#ffa500"
            android:layout_below="@+id/textView8"
            android:layout_toRightOf="@+id/textView8"
            android:layout_toEndOf="@+id/textView8" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:textSize="18dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:id="@+id/editText"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/txt1"
            android:layout_toRightOf="@+id/textView8" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textAlignment="center"
            android:id="@+id/editText2"
            android:layout_marginRight="10dp"
            android:layout_above="@+id/textView3"
            android:layout_alignLeft="@+id/editText"
            android:layout_alignStart="@+id/editText" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textAlignment="center"
            android:layout_marginRight="15dp"
            android:id="@+id/editText3"
            android:layout_above="@+id/textView6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/editText2"
            android:layout_alignStart="@+id/editText2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textAlignment="center"
            android:layout_marginRight="15dp"
            android:id="@+id/editText4"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignLeft="@+id/editText3"
            android:layout_alignStart="@+id/editText3" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:id="@+id/editText5"
            android:textAlignment="center"
            android:layout_alignTop="@+id/textView4"
            android:layout_alignLeft="@+id/editText4"
            android:layout_alignStart="@+id/editText4"
            android:layout_alignRight="@+id/editText4"
            android:layout_alignEnd="@+id/editText4" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textAlignment="center"
            android:id="@+id/editText6"
            android:layout_above="@+id/textView8"
            android:layout_alignLeft="@+id/editText5"
            android:layout_alignStart="@+id/editText5" />

    </RelativeLayout>
</RelativeLayout>