<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="CAB SHARE"
            android:id="@+id/cabshare"
            android:layout_marginTop="40dp"
            android:textColor="#ffa500"
            android:fontFamily="serif"
            android:textSize="25dp"
            android:layout_marginLeft="130dp" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="USERNAME"
            android:id="@+id/txt1"
            android:textColor="#ffffff"

            android:layout_marginLeft="15dp"
            android:layout_marginTop="110dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center" />



        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="PHONE NO."
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:id="@+id/txt2"

            android:layout_below="@+id/txt1"
            android:layout_alignRight="@+id/txt1"
            android:layout_alignEnd="@+id/txt1"
            android:gravity="center" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="FROM:"
            android:textColor="#ffffff"
            android:id="@+id/textView3"
            android:layout_marginTop="5dp"
            android:gravity="center"

            android:layout_alignLeft="@+id/txt2"
            android:layout_alignStart="@+id/txt2"
            android:layout_below="@+id/txt2" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="TO:"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:id="@+id/textView6"

            android:gravity="center"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="TIME"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:id="@+id/textView7"
            android:gravity="center"
            android:layout_alignLeft="@+id/txt2"
            android:layout_alignStart="@+id/txt2"
            android:layout_below="@+id/textView6" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIT"

            android:id="@+id/edit"
            android:layout_marginTop="53dp"
            android:background="#ffa500"
            android:layout_below="@+id/textView7"
            android:layout_alignRight="@+id/textView7"
            android:layout_alignEnd="@+id/textView7" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:textAlignment="center"
            android:id="@+id/editText"
            android:textColor="#ffffff"
            android:layout_above="@+id/txt2"
            android:layout_alignLeft="@+id/editText2"
            android:layout_alignStart="@+id/editText2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:textColor="#ffffff"

            android:id="@+id/editText2"
            android:layout_above="@+id/textView3"
            android:layout_toRightOf="@+id/txt2"
            android:layout_toEndOf="@+id/txt2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:textColor="#ffffff"

            android:id="@+id/editText3"
            android:layout_above="@+id/textView6"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:textColor="#ffffff"

            android:id="@+id/editText4"
            android:layout_above="@+id/editText6"
            android:layout_alignLeft="@+id/editText6"
            android:layout_alignStart="@+id/editText6" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:textColor="#ffffff"

            android:id="@+id/editText6"
            android:layout_below="@+id/textView6"
            android:layout_toRightOf="@+id/textView7"
            android:layout_toEndOf="@+id/textView7" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELETE"
            android:id="@+id/delete"
            android:background="#ffa500"
            android:layout_alignTop="@+id/edit"
            android:layout_alignRight="@+id/editText6"
            android:layout_alignEnd="@+id/editText6"
            android:layout_marginRight="57dp"
            android:layout_marginEnd="57dp" />

    </RelativeLayout>
</RelativeLayout>