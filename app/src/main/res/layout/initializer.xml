<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="CAB SHARE"
            android:id="@+id/textView2"
            android:layout_marginTop="40dp"
            android:textColor="#ffa500"
            android:fontFamily="serif"
            android:textSize="30dp"
            android:layout_marginLeft="100dp" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="USERNAME"
            android:id="@+id/txt1"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="9176755064"
            android:id="@+id/number"
            android:layout_marginRight="15dp"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:layout_gravity="right"
            android:layout_alignTop="@+id/txt2"
            android:layout_alignLeft="@+id/username"
            android:layout_alignStart="@+id/username"
            android:gravity="center" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="PHONE NO."
            android:layout_marginTop="5dp"
            android:id="@+id/txt2"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:layout_below="@+id/txt1"
            android:layout_alignRight="@+id/txt1"
            android:layout_alignEnd="@+id/txt1"
            android:gravity="center" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Preetha"
            android:textSize="18dp"
            android:id="@+id/username"
            android:layout_marginRight="15dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_above="@+id/txt2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="FROM:"
            android:id="@+id/textView3"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_alignLeft="@+id/txt2"
            android:layout_alignStart="@+id/txt2"
            android:layout_below="@+id/txt2" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Chatram"
            android:id="@+id/from"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:layout_above="@+id/textView6"
            android:layout_alignLeft="@+id/to"
            android:layout_alignStart="@+id/to" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="TO:"
            android:layout_marginTop="5dp"
            android:id="@+id/textView6"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="NIT"
            android:id="@+id/to"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:layout_above="@+id/textView4"
            android:layout_alignRight="@+id/number"
            android:layout_alignEnd="@+id/number" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="DATE"
            android:id="@+id/textView4"
            android:textColor="#ffffff"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_below="@+id/textView6"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="23/6/16"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:textColor="#ffffff"
            android:id="@+id/date"
            android:gravity="center"
            android:layout_above="@+id/textView7"
            android:layout_alignRight="@+id/time"
            android:layout_alignEnd="@+id/time" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="TIME"
            android:layout_marginTop="5dp"
            android:id="@+id/textView7"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/txt2"
            android:layout_alignStart="@+id/txt2" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="6.30 pm"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:id="@+id/time"
            android:gravity="center"
            android:layout_alignTop="@+id/textView7"
            android:layout_alignRight="@+id/to"
            android:layout_alignEnd="@+id/to" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="CAB COMPANY"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:id="@+id/textView8"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_below="@+id/textView7"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_toLeftOf="@+id/textView9"
            android:layout_toStartOf="@+id/textView9" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="OLA"
            android:id="@+id/textView9"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_alignTop="@+id/textView8"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JOIN"
            android:background="#ffa500"
            android:textSize="18dp"
            android:id="@+id/join"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="70dp"
            android:layout_below="@+id/textView8"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2" />

    </RelativeLayout>
</RelativeLayout>